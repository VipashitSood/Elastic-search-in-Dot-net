@model SearchResultsModel
@{
    ViewData["Title"] = "Search Page";
}
<div class="text-center">
    @if (Model?.Results != null)
    {
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Customer Name</th>
                        <th>Order Date</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var result in Model.Results)
                    {
                        <tr>
                            <td>@result.Name</td>
                            <td>@result.Age</td>
                            <td>@result.City</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<div class="text-right">
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Back to home</a>
</div>